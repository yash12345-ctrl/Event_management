<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Live Attendance Dashboard - TechWave Summit</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/feather-icons"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
    body {
      font-family: 'Inter', sans-serif;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .new-row { animation: fadeIn 0.5s ease-out forwards; }
    ::-webkit-scrollbar { width: 8px; height: 8px; }
    ::-webkit-scrollbar-track { background: hsl(222 47% 11% / 0.5); }
    ::-webkit-scrollbar-thumb { background: #4f46e5; border-radius: 4px; }
    ::-webkit-scrollbar-thumb:hover { background: #4338ca; }
  </style>
</head>
<body class="bg-slate-900 text-slate-300 antialiased">

  <div class="container mx-auto p-4 sm:p-6 lg:p-8 max-w-6xl">

    <header class="flex flex-col sm:flex-row justify-between sm:items-center mb-6 gap-4">
      <h1 class="text-2xl sm:text-3xl font-bold text-white flex items-center gap-3">
        <span class="relative flex h-3 w-3">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-3 w-3 bg-emerald-500"></span>
        </span>
        Live Attendance
      </h1>
      <div id="attendee-counter" class="text-base sm:text-lg font-medium text-slate-400 bg-slate-800/50 border border-slate-700 rounded-lg px-3 sm:px-4 py-2 flex items-center gap-2 w-full sm:w-auto justify-center">
        <i data-feather="users" class="w-5 h-5 text-indigo-400"></i>
        <span id="count-value" class="text-white font-semibold">0</span>
        <span class="hidden sm:inline">Attendees Present</span>
      </div>
    </header>

    <div class="mb-6 flex flex-col sm:flex-row gap-3 sm:gap-4 justify-between items-stretch sm:items-center">
      <div class="relative w-full sm:max-w-xs">
        <input type="text" id="search-input" placeholder="Search by name or ID..." 
               class="w-full bg-slate-800 border border-slate-700 rounded-lg py-2 pl-10 pr-4 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-all text-sm sm:text-base">
        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
          <i data-feather="search" class="w-4 h-4 sm:w-5 sm:h-5 text-slate-500"></i>
        </div>
      </div>
      <a href="/admin/registrations" 
         class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors duration-300 flex items-center justify-center gap-2 text-sm sm:text-base w-full sm:w-auto">
        <i data-feather="grid" class="w-4 h-4 sm:w-5 sm:h-5"></i>
        <span>All Registrations</span>
      </a>
    </div>

    <main class="bg-slate-800/50 rounded-xl shadow-2xl overflow-hidden border border-slate-700">
      <div class="overflow-x-auto">
        <table class="w-full text-xs sm:text-sm">
          <thead class="bg-slate-800 border-b border-slate-700">
            <tr>
              <th class="px-4 sm:px-6 py-3 sm:py-4 font-semibold text-left text-slate-400 uppercase tracking-wider">Registration ID</th>
              <th class="px-4 sm:px-6 py-3 sm:py-4 font-semibold text-left text-slate-400 uppercase tracking-wider">Full Name</th>
              <th class="px-4 sm:px-6 py-3 sm:py-4 font-semibold text-left text-slate-400 uppercase tracking-wider">Status</th>
            </tr>
          </thead>
          <tbody id="attendance-table-body" class="divide-y divide-slate-700/50">
          </tbody>
        </table>
        <script id="initial-data" type="application/json">
          <%- JSON.stringify(attendees) %>
        </script>
      </div>
    </main>

    <footer class="text-center mt-8 text-xs sm:text-sm text-slate-600 px-2">
      <p>TechWave Summit | Live Dashboard</p>
    </footer>
  </div>

  <script>
    const AppState = { attendees: [], filteredAttendees: [], searchTerm: '', socket: null,
      config: { apiEndpoint: '/api/live-attendees', websocketUrl: `wss://${window.location.host}`, reconnectInterval: 5000 } };
    const DOMElements = { tableBody: document.getElementById('attendance-table-body'),
      searchInput: document.getElementById('search-input'), counter: document.getElementById('count-value'),
      initialDataScript: document.getElementById('initial-data') };
    const Utils = { debounce(func, delay = 250) { let timeoutId; return (...args) => { clearTimeout(timeoutId);
      timeoutId = setTimeout(() => { func.apply(this, args); }, delay); }; } };
    const App = {
      init() { this.loadInitialData(); this.render(); this.setupEventListeners(); this.connectWebSocket(); feather.replace(); },
      loadInitialData() { try { const initialData = JSON.parse(DOMElements.initialDataScript.textContent || '[]');
        AppState.attendees = initialData; AppState.filteredAttendees = initialData; }
        catch (e) { AppState.attendees = []; AppState.filteredAttendees = []; } },
      setupEventListeners() { const debouncedSearch = Utils.debounce(this.handleSearch.bind(this), 300);
        DOMElements.searchInput.addEventListener('input', e => debouncedSearch(e.target.value)); },
      handleSearch(term) { AppState.searchTerm = term.toLowerCase();
        AppState.filteredAttendees = !AppState.searchTerm ? [...AppState.attendees] :
          AppState.attendees.filter(a => a.fullName.toLowerCase().includes(AppState.searchTerm) || a.registrationId.toLowerCase().includes(AppState.searchTerm));
        this.render(); },
      connectWebSocket() { AppState.socket = new WebSocket(AppState.config.websocketUrl);
        AppState.socket.onmessage = e => { try { const newAttendee = JSON.parse(e.data);
          AppState.attendees.unshift(newAttendee); this.handleSearch(AppState.searchTerm); } catch (err) { console.error(err); } };
        AppState.socket.onclose = () => setTimeout(() => this.connectWebSocket(), AppState.config.reconnectInterval); },
      render() { DOMElements.tableBody.innerHTML = '';
        if (AppState.filteredAttendees.length === 0) { this.renderEmptyState(); }
        else { AppState.filteredAttendees.forEach((a,i) => { const row = this.createRow(a); if(i===0) row.classList.add('new-row'); DOMElements.tableBody.appendChild(row); }); }
        DOMElements.counter.textContent = AppState.attendees.length; feather.replace(); },
      createRow(a) { const tr = document.createElement('tr'); tr.className = 'hover:bg-slate-800 transition-colors duration-200';
        tr.innerHTML = `<td class="px-4 sm:px-6 py-3 sm:py-4 whitespace-nowrap text-slate-400 font-mono">${a.registrationId}</td>
          <td class="px-4 sm:px-6 py-3 sm:py-4 whitespace-nowrap font-medium text-white">${a.fullName}</td>
          <td class="px-4 sm:px-6 py-3 sm:py-4 whitespace-nowrap"><span class="bg-emerald-500/10 text-emerald-400 font-semibold px-2 sm:px-3 py-1 rounded-full text-[10px] sm:text-xs flex items-center gap-1.5 w-fit">
          <i data-feather="check-circle" class="w-3 h-3 sm:w-4 sm:h-4"></i> Present </span></td>`; return tr; },
      renderEmptyState() { DOMElements.tableBody.innerHTML = `<tr><td colspan="3" class="text-center p-8 sm:p-12 text-slate-500">
        <div class="flex flex-col items-center gap-3 sm:gap-4"><i data-feather="users" class="w-10 h-10 sm:w-12 sm:h-12 text-slate-600"></i>
        <span class="font-semibold text-base sm:text-lg text-slate-400">${AppState.searchTerm?'No Matching Attendees':'Waiting for Attendees'}</span>
        <p class="text-xs sm:text-sm">${AppState.searchTerm?'Try a different search term.':'No one has checked in yet. The list will update automatically.'}</p></div></td></tr>`; }
    };
    document.addEventListener('DOMContentLoaded', () => App.init());
  </script>
</body>
</html>
